# Coverage configuration for the Ethoscope project
[run]
source = src/ethoscope/ethoscope, src/node/ethoscope_node
omit =
    */tests/*
    */test_*
    */conftest.py
    */setup.py
    */venv/*
    */env/*
    */__pycache__/*
    */build/*
    */dist/*
    */.*
    */static/*
    */scripts/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

# Fail if coverage falls below this threshold
# Current coverage: 32.82% after multi_stimulator tests
# Progress: 25.18% (CI) → 29.84% → 31.00% → 31.44% → 32.12% → 32.14% → 32.48% → 32.82%
# Target: 42% → 70%
fail_under = 32

ignore_errors = True
show_missing = True
precision = 2

[html]
directory = htmlcov
title = Ethoscope Test Coverage Report

[xml]
output = coverage.xml
