# Coverage configuration for the Ethoscope project
[run]
source = src/ethoscope/ethoscope, src/node/ethoscope_node
omit =
    */tests/*
    */test_*
    */conftest.py
    */setup.py
    */venv/*
    */env/*
    */__pycache__/*
    */build/*
    */dist/*
    */.*
    */static/*
    */scripts/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

# Fail if coverage falls below this threshold
# Current coverage: 42.45% after diagnostics tests (ALL tests including integration)
# Progress: 25.18% (CI) → 32.48% (session) → 42.45% (current, +9.97 overall)
# Unit tests only: 31.55% | All tests: 42.45%
# Milestone: 40% ✓ | Target: 50% (need +7.55)
fail_under = 42

ignore_errors = True
show_missing = True
precision = 2

[html]
directory = htmlcov
title = Ethoscope Test Coverage Report

[xml]
output = coverage.xml
