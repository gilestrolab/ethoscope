[Unit]
Description=Virtuascope running on the node
Wants=ntpd.service mysqld.service
After=ntpd.service network.target


[Service]
Type=simple
WorkingDirectory=/opt/ethoscope/src/ethoscope/scripts/
ExecStart=/usr/bin/python3 /opt/ethoscope/src/ethoscope/scripts/device_server.py -D
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target
