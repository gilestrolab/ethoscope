# Coverage configuration for the Ethoscope node package
[run]
source = ethoscope_node
omit =
    */tests/*
    */test_*
    */conftest.py
    */setup.py
    */venv/*
    */env/*
    */__pycache__/*
    */build/*
    */dist/*
    */.*
    */static/*
    */scripts/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

ignore_errors = True
show_missing = True
precision = 2
skip_covered = False
skip_empty = False

# Minimum coverage thresholds
# Previous: 69.33%
# Current: 70.14% (+0.81 points from notification module tests)
# Email notification module: 100.00% coverage (31 tests)
# Mattermost notification module: 99.35% coverage (36 tests)
# Comprehensive edge case coverage including error paths, cooldowns, and recipient handling
fail_under = 70.14

[html]
directory = htmlcov
title = Ethoscope Node Package Coverage Report

[xml]
output = coverage.xml
