# Coverage configuration for the Ethoscope node package
[run]
source = ethoscope_node
omit =
    */tests/*
    */test_*
    */conftest.py
    */setup.py
    */venv/*
    */env/*
    */__pycache__/*
    */build/*
    */dist/*
    */.*
    */static/*
    */scripts/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

ignore_errors = True
show_missing = True
precision = 2
skip_covered = False
skip_empty = False

# Minimum coverage thresholds
# Previous: 52.35%
# Current: 56.93% (+4.58 points from setup_api module tests)
# Includes comprehensive Setup API testing (77.58% coverage, 60 tests)
# Covers user management, incubators, notifications, tunnel config, virtual sensors
fail_under = 56.93

[html]
directory = htmlcov
title = Ethoscope Node Package Coverage Report

[xml]
output = coverage.xml
